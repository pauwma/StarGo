<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".BuscadorFragment">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"

        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/search_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Buscar"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchEditText"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="5dp"
                    app:shapeAppearanceOverlay="@style/roundCornersImagesBuscador"
                    android:src="@drawable/img_buscador1"
                    android:scaleType="fitCenter"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="5dp"
                    app:shapeAppearanceOverlay="@style/roundCornersImagesBuscador"
                    android:src="@drawable/img_buscador2"
                    android:scaleType="fitCenter"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="5dp"
                    app:shapeAppearanceOverlay="@style/roundCornersImagesBuscador"
                    android:src="@drawable/img_buscador3"
                    android:scaleType="fitCenter"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="5dp"
                    app:shapeAppearanceOverlay="@style/roundCornersImagesBuscador"
                    android:src="@drawable/img_buscador4"
                    android:scaleType="fitCenter"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="5dp"
                    app:shapeAppearanceOverlay="@style/roundCornersImagesBuscador"
                    android:src="@drawable/img_buscador5"
                    android:scaleType="fitCenter"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="5dp"
                    app:shapeAppearanceOverlay="@style/roundCornersImagesBuscador"
                    android:src="@drawable/img_buscador6"
                    android:scaleType="fitCenter"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="5dp"
                    app:shapeAppearanceOverlay="@style/roundCornersImagesBuscador"
                    android:src="@drawable/img_buscador7"
                    android:scaleType="fitCenter"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="5dp"
                    app:shapeAppearanceOverlay="@style/roundCornersImagesBuscador"
                    android:src="@drawable/img_buscador8"
                    android:scaleType="fitCenter"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="5dp"
                    app:shapeAppearanceOverlay="@style/roundCornersImagesBuscador"
                    android:src="@drawable/img_buscador5"
                    android:scaleType="fitCenter"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginHorizontal="5dp"
                    app:shapeAppearanceOverlay="@style/roundCornersImagesBuscador"
                    android:src="@drawable/img_buscador1"
                    android:scaleType="fitCenter"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>