<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">



    <LinearLayout
        android:id="@+id/locationEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_edit_text"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="6dp"
        app:layout_constraintBottom_toTopOf="@+id/destinationEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:paddingHorizontal="6dp"
            android:textSize="16dp"
            android:text="Desde"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="#A7A7A7"
            app:layout_constraintTop_toBottomOf="@+id/dateButton"
            android:maxLines="1" />

        <View
            android:layout_width="2dp"
            android:layout_height="24dp"
            android:background="#626262"/>

        <EditText
            android:id="@+id/locationText"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/custom_edit_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/destinationEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/custom_edit_text"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="6dp"
        app:layout_constraintBottom_toTopOf="@+id/seleccionLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:maxLines="1"
            android:paddingHorizontal="9dp"
            android:text="Hasta"
            android:textColor="#A7A7A7"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/dateButton" />

        <View
            android:layout_width="2dp"
            android:layout_height="24dp"
            android:background="#626262" />

        <EditText
            android:id="@+id/destinationText"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/custom_edit_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/seleccionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/datePicker"
        app:layout_constraintEnd_toEndOf="@+id/datePicker"
        app:layout_constraintStart_toStartOf="@+id/datePicker">

        <TextView
            android:id="@+id/soloIda"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:paddingVertical="6dp"
            android:text="Solo ida"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/idaYVuelta"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:paddingVertical="6dp"
            android:text="Ida y vuelta"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/custom_edit_text"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/peoplePicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="10dp"
            android:text="12/02/2023"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <View
            android:layout_width="2dp"
            android:layout_height="24dp"
            android:background="#626262" />

        <TextView
            android:id="@+id/dateText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="10dp"
            android:text="12/02/2026"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/peoplePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:background="@drawable/custom_edit_text"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/less_people"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:gravity="center">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_less_round"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/peopleImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_user_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/people_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="1dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/more_people"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:gravity="center">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_plus_round"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/custom_button_inicio"
        android:paddingLeft="22dp"
        android:paddingTop="10dp"
        android:paddingRight="22dp"
        android:paddingBottom="10dp"
        android:src="@drawable/arrow_icon_inicio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>