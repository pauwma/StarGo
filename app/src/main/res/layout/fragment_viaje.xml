<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <HorizontalScrollView
        android:id="@+id/planetView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:isScrollContainer="true"
        android:adjustViewBounds="true"
        android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/earthImageView"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:paddingLeft="20dp"
                android:layout_marginHorizontal="40dp"
                android:src="@drawable/earth"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/issImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginHorizontal="100dp"
                android:src="@drawable/iss"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/earthImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/moonImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100dp"
                android:src="@drawable/moon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/issImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/marsImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100dp"
                android:src="@drawable/mars"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/moonImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/europaImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100dp"
                android:src="@drawable/europa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/marsImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/proximaBImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100dp"
                android:paddingRight="80dp"
                android:src="@drawable/proxima_b"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/europaImageView"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:background="#1f1f1f"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/lineView"
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/locationEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_edit_text"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="6dp"
            app:layout_constraintBottom_toTopOf="@+id/destinationEditText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:maxLines="1"
                android:paddingHorizontal="6dp"
                android:text="Desde"
                android:textColor="#A7A7A7"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@+id/dateButton" />

            <View
                android:layout_width="2dp"
                android:layout_height="24dp"
                android:background="#626262" />

            <EditText
                android:id="@+id/locationText"
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/custom_edit_text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/destinationEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/custom_edit_text"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="6dp"
            app:layout_constraintBottom_toTopOf="@+id/seleccionLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:maxLines="1"
                android:paddingHorizontal="9dp"
                android:text="Hasta"
                android:textColor="#A7A7A7"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@+id/dateButton" />

            <View
                android:layout_width="2dp"
                android:layout_height="24dp"
                android:background="#626262" />

            <EditText
                android:id="@+id/destinationText"
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/custom_edit_text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/seleccionLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/datePicker"
            app:layout_constraintEnd_toEndOf="@+id/datePicker"
            app:layout_constraintStart_toStartOf="@+id/datePicker">

            <TextView
                android:id="@+id/soloIda"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:text="Solo ida"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/idaYVuelta"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:text="Ida y vuelta"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/custom_edit_text"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/peoplePicker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                android:text="12/02/2023"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <View
                android:layout_width="2dp"
                android:layout_height="24dp"
                android:background="#626262" />

            <TextView
                android:id="@+id/dateText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                android:text="12/02/2026"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/peoplePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:background="@drawable/custom_edit_text"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/nextButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/less_people"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:gravity="center">

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_less_round"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/peopleImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_user_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/people_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="1dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/more_people"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:gravity="center">

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_plus_round"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:background="@drawable/custom_button_inicio"
            android:paddingLeft="22dp"
            android:paddingTop="10dp"
            android:paddingRight="22dp"
            android:paddingBottom="10dp"
            android:src="@drawable/arrow_icon_inicio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>